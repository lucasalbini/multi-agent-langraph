# Evolution API
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE_NAME=my-instance

# LLM Provider: "anthropic", "openai", or "openrouter"
LLM_PROVIDER=anthropic

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI
OPENAI_API_KEY=sk-...

# OpenRouter
OPENROUTER_API_KEY=sk-or-...
OPENROUTER_MODEL=anthropic/claude-sonnet-4

# Filter: only respond to this group (leave empty to respond to all)
# Send a message in the group, check the logs to find the JID (ends with @g.us)
ALLOWED_GROUP_JID=
